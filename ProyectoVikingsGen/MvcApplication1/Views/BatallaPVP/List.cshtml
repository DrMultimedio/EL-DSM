@model IEnumerable<ProyectoVikingsGenNHibernate.EN.ProyectoVikings.BatallaPVPEN>

@{
    ViewBag.Title = "Mis BatallaPVPs";
}

<h2>Mis BatallaPVPs</h2>

<p>
    @Html.ActionLink("Nuevo BatallaPVP", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdGanador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recompensa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jugador1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jugador2)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdGanador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recompensa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador1.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador2.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id}) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Ver Jugador1", "Details", "Jugador1", new { id = item.Id }, "null") |
                @Html.ActionLink("Ver Jugador2", "Details", "Jugador2", new { id = item.Id }, "null")



            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Volver a BatallaPVPs", "Index")
</div>