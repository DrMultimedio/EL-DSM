@model IEnumerable<ProyectoVikingsGenNHibernate.EN.ProyectoVikings.InventarioEN>

@{
    ViewBag.Title = "Mis Inventarios";
}

<h2>Mis Inventarios</h2>

<p>
    @Html.ActionLink("Nuevo Inventario", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvMax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objeto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jugador)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objeto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id}) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Ver Jugador", "Details", "Jugador", new { id = item.Id }, "null") |
                @Html.ActionLink("Ver Objeto", "Details", "Objeto", new { id = item.Id }, "null")



            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Volver a Inventarios", "Index")
</div>