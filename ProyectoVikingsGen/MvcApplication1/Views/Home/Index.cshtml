@{ var BatallaPVEs = ViewData["BatallaPVEs"] as IEnumerable<ProyectoVikingsGenNHibernate.EN.ProyectoVikings.Batalla_PVEEN>;}
@{ var jugadores = ViewData["jugadores"] as IEnumerable<ProyectoVikingsGenNHibernate.EN.ProyectoVikings.JugadorEN>;}
@{ var BatallaPVP = ViewData["BatallaPVPs"] as IEnumerable<ProyectoVikingsGenNHibernate.EN.ProyectoVikings.Batalla_PVPEN>;}
@{
    ViewBag.Title = "Página Principal";
}
<div class="row center-align">
    <div class="col s12 m12 l12">
        <ul class="tabs" id="tabla2">
            <li class="tab col s4"><a href="#test2">Jugadores recientes</a></li>
            <li class="tab col s4"><a class="active" href="#test1">BatallaPVEs recientes</a></li>
            <li class="tab col s4"><a href="#test3">BatallaPVP recientes</a></li>
        </ul>
    </div>
    <div id="test1" class="col s12 m12 l12">
        @if (BatallaPVP!=null && BatallaPVEs.Count() > 0)
        {
            foreach (var item in BatallaPVEs)
            {
                
                <div class="col s12">
                    <div class="card horizontal">
                        <div class="card-stacked">
                            <div class="card-content" style="text-align: left;">
                                <h4 class="header">@Html.ActionLink( "BatallaPVE", "Details", "BatallaPVE", new { id = item.Id }, new { })</h4>


                
                            </div>
                            <div class="card-action" style="text-align: left;">
                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="preloader-wrapper big active" style="margin-top: 20px;">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="test2" class="col s12 m12 l12">
        @if (jugadores.Count() > 0)
        {
            foreach (var item in jugadores)
            {
                <div class="col s12">
                    <div class="card horizontal">
                     
                        <div class="card-stacked">
                            <div class="card-content" style="text-align: left;">
                                <h4 class="header">@Html.ActionLink(item.Nombre, "Index", "Usuario", new { id = item.Id }, new { })</h4>
                               
                            </div>
                            <div class="card-action" style="text-align: left;">
                                <b>Vida:</b> @Html.DisplayFor(modelItem => item.VidaAct) -
                                <b>Vida Maxima:</b> @Html.DisplayFor(modelItem => item.Vidamax) 
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="preloader-wrapper big active" style="margin-top: 20px;">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="test3" class="col s12 m12 l12">
        @if (BatallaPVP!=null  && BatallaPVP.Count() > 0)
        {
            foreach (var item in BatallaPVP)
            {
                <div class="col s12">
                    <div class="card horizontal">
                        <div class="card-image">
                            <img src="http://lorempixel.com/100/190/nature/6">
                        </div>
                        <div class="card-stacked">
                            <div class="card-content" style="text-align: left;">
                                <h4 class="header">@Html.ActionLink("BatallaPVP", "Details", "BatallaPVP", new { id = item.Id}, new { })</h4>
                                
                            </div>
                            <div class="card-action" style="text-align: left;">
                                <b>Jugador1:</b> @Html.DisplayFor(modelItem => item.Jugador) -
                                <b>Jugador2:</b> @Html.DisplayFor(modelItem => item.Jugador_0)
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="preloader-wrapper big active" style="margin-top: 20px;">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>